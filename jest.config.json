{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/*/**/{!(*-type),}.ts"
  ],
  "moduleFileExtensions": ["js", "ts"],
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": [ "**/?(*.)+(spec|test).?([mc])[jt]s?(x)" ],
  "transform": {
    "^.+\\.js?$": "babel-jest",
    "^.+\\.(ts|tsx)?$": [
        "ts-jest", {
            "tsconfig": "tsconfig.spec.json"
        }
    ]
  },
  "transformIgnorePatterns": [
    "^.+\\.js$"
  ],
  "verbose": true
}
